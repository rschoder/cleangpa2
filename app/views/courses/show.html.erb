<div class="page-header">
  <h3><%= @course.course_name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

    <table class="table table-hover table-responsive col-md-2">
    <thead>
    <tr>
    <th>A+</th>
    <th>A</th>
    <th>A-</th>
    <th>B+</th>
    <th>B</th>
    <th>B-</th>
    <th>C+</th>
    <th>C</th>
    <th>C-</th>
    <th>D+</th>
    <th>D</th>
    <th>F</th>
    </tr>
    </thead>
    <tr>
    <td><%= @course.grades.where(letter:"A+").count%></td>
    <td><%= @course.grades.where(letter:"A").count%></td>
    <td><%= @course.grades.where(letter:"A-").count%></td>
    <td><%= @course.grades.where(letter:"B+").count%></td>
    <td><%= @course.grades.where(letter:"B").count%></td>
    <td><%= @course.grades.where(letter:"B-").count%></td>
    <td><%= @course.grades.where(letter:"C+").count%></td>
    <td><%= @course.grades.where(letter:"C").count%></td>
    <td><%= @course.grades.where(letter:"C-").count%></td>
    <td><%= @course.grades.where(letter:"D+").count%></td>
    <td><%= @course.grades.where(letter:"D").count%></td>
    <td><%= @course.grades.where(letter:"F").count%></td>
    </tr>
    </table>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/courses" class="btn btn-primary">
        Back
      </a>
      <a href="/courses/<%= @course.id %>/edit" class="btn btn-warning">
        Edit
      </a>
    </div>
  </div>
</div>
