<div class="page-header">
  <h1>
    Grades (GPA: <%= current_user.grades.average("number")%>)
    <hr>
    <a href="/grades/new" class="btn btn-lg btn-success">New Grade</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Course</th>
        <th>Number</th>
        <th>Letter</th>
        <th>Schoolyear</th>
        <th>Actions</th>
      </tr>

      <% @grades.each do |grade| %>
      <% if current_user.id == grade.user_id %>
      <tr>
        <td><a href = "/courses/<%= grade.course.id %>"><%= grade.course.course_name %></td></a>
        <td><%= grade.number %></td>
        <td><%= grade.letter %></td>
        <td><%= grade.schoolyear %></td>
        <td>
          <a href="/grades/<%= grade.id %>" class="btn btn-primary">Show</a>
          <a href="/grades/<%= grade.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_grade/<%= grade.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <%end%>
      <% end %>
    </table>
  </div>
</div>
