<!-- Validation failure messages -->
<% if @grade.errors.any? %>
  <% @grade.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Grade</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_grade" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @grade.user_id %>">
      </div>

      <!-- Label and input for course_id -->
      <div class="form-group">
        <label for="course_id" class="control-label">
          Course
        </label>

        <input type="text" id="course_id" name="course_id" placeholder="Course" class="form-control" value="<%= @grade.course_id %>">
      </div>


      <!-- Label and input for letter -->
      <div class="form-group">
        <label for="letter" class="control-label">
          Letter
        </label>

        <input type="text" id="letter" name="letter" placeholder="Letter" class="form-control" value="<%= @grade.letter %>">
      </div>

      <!-- Label and input for number -->
      <div class="form-group">
        <label for="number" class="control-label">
          Value
        </label>

        <input type="text" id="number" name="number" placeholder="Number" class="form-control" value="<%= @grade.number %>">
      </div>

      <!-- Label and input for schoolyear -->
      <div class="form-group">
        <label for="schoolyear" class="control-label">
          Schoolyear
        </label>

        <input type="text" id="schoolyear" name="schoolyear" placeholder="Schoolyear" class="form-control" value="<%= @grade.schoolyear %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @grade.name %>">
      </div>

      <button class="btn btn-success">
        Create Grade
      </button>
      or
      <a href="/grades">Cancel</a>
    </form>
  </div>
</div>
