<div class="page-header">
  <h3><a href = "/courses/<%= @grade.course.id %>"><%= Course.find(@grade.course_id).course_name%></h3></a>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Letter</dt>
      <dd><%= @grade.letter %></dd>

      <dt>Number</dt>
      <dd><%= @grade.number %></dd>

      <dt>Schoolyear</dt>
      <dd><%= @grade.schoolyear %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/grades" class="btn btn-primary">
        Back
      </a>
      <a href="/grades/<%= @grade.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_grade/<%= @grade.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
